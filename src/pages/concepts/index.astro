---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { sortCollectionByDependency } from "../../utils/sortByDependency";

const conceptsRaw = await getCollection("concepts");
const concepts = sortCollectionByDependency(conceptsRaw);
const firstItem = concepts[0];
---

<Layout title="Concepts" currentSection="Concepts">
  <article>
    <h1>Concepts</h1>
    <p class="lead">AI and machine learning fundamentals that help you understand the technology you're working with.</p>

    <ul class="section-list">
      {concepts.map((entry) => (
        <li>
          <a href={`/concepts/${entry.slug}/`}>{entry.data.title}</a>
        </li>
      ))}
    </ul>

    {firstItem && (
      <nav class="section-nav">
        <a href={`/concepts/${firstItem.slug}/`} class="nav-next">
          {firstItem.data.title} â†’
        </a>
      </nav>
    )}
  </article>
</Layout>

<style>
  .lead {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-8);
  }

  .section-list {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-8) 0;
  }

  .section-list li {
    margin-bottom: var(--space-3);
  }

  .section-list a {
    color: var(--color-accent);
  }

  .section-list a:hover {
    color: var(--color-accent-hover);
  }

  .section-nav {
    text-align: right;
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border);
    font-size: var(--text-sm);
  }

  .nav-next {
    color: var(--color-accent);
  }

  .nav-next:hover {
    color: var(--color-accent-hover);
  }
</style>
