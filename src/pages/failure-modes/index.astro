---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import "../../styles/section-index.css";

const failureModesRaw = await getCollection("failure-modes");
const failureModes = [...failureModesRaw].sort((a, b) =>
  a.data.title.localeCompare(b.data.title)
);
const firstItem = failureModes[0];
---

<Layout title="Failure Modes" currentSection="Failure Modes">
  <article>
    <h1>Failure Modes</h1>
    <p class="lead">Dynamics that result in unreasonable or unmaintainable outputs from AI.</p>

    <ul class="section-list">
      {failureModes.map((entry) => (
        <li>
          <a href={`/failure-modes/${entry.slug}/`}>{entry.data.title}</a>
        </li>
      ))}
    </ul>

    {firstItem && (
      <nav class="section-nav">
        <a href={`/failure-modes/${firstItem.slug}/`}>
          {firstItem.data.title} â†’
        </a>
      </nav>
    )}
  </article>
</Layout>
