---
interface NavItem {
  slug: string;
  title: string;
  collection: string;
  sectionName: string;
}

interface Props {
  next: NavItem | null;
  currentCollection: string;
}

const { next, currentCollection } = Astro.props;

// Check if navigating to a different section
const crossingToNewSection = next && next.collection !== currentCollection;
---

{next && (
  <nav class="content-nav" aria-label="Page navigation">
    <a href={`/${next.collection}/${next.slug}/`} class="nav-next">
      {crossingToNewSection && <span class="section-label">{next.sectionName}</span>}
      <span class="nav-title">{next.title} â†’</span>
    </a>
  </nav>
)}

<style>
  .content-nav {
    text-align: right;
    padding-top: var(--space-4);
    margin-top: var(--space-6);
    border-top: 1px solid var(--color-border);
    font-size: var(--text-sm);
  }

  .nav-next {
    color: var(--color-accent);
    text-decoration: none;
  }

  .nav-next:hover {
    color: var(--color-accent-hover);
  }

  .section-label {
    display: block;
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    margin-bottom: var(--space-1);
  }

  .nav-title {
    display: block;
  }
</style>
