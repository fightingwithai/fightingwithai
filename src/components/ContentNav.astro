---
interface NavItem {
  slug: string;
  title: string;
  collection: string;
  sectionName: string;
}

interface Props {
  prev: NavItem | null;
  next: NavItem | null;
  currentCollection: string;
}

const { prev, next, currentCollection } = Astro.props;

// Check if navigating to a different section
const crossingToPrevSection = prev && prev.collection !== currentCollection;
const crossingToNextSection = next && next.collection !== currentCollection;
---

{(prev || next) && (
  <nav class="content-nav" aria-label="Page navigation">
    {prev ? (
      <a href={`/${prev.collection}/${prev.slug}/`} class="nav-prev">
        {crossingToPrevSection && <span class="section-label">{prev.sectionName}</span>}
        <span class="nav-title">← {prev.title}</span>
      </a>
    ) : <span />}
    {next && (
      <a href={`/${next.collection}/${next.slug}/`} class="nav-next">
        {crossingToNextSection && <span class="section-label">{next.sectionName}</span>}
        <span class="nav-title">{next.title} →</span>
      </a>
    )}
  </nav>
)}

<style>
  .content-nav {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding-top: var(--space-4);
    margin-top: var(--space-6);
    border-top: 1px solid var(--color-border);
    font-size: var(--text-sm);
  }

  .nav-prev,
  .nav-next {
    color: var(--color-accent);
    text-decoration: none;
  }

  .nav-prev:hover,
  .nav-next:hover {
    color: var(--color-accent-hover);
  }

  .nav-next {
    text-align: right;
  }

  .section-label {
    display: block;
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    margin-bottom: var(--space-1);
  }

  .nav-title {
    display: block;
  }
</style>
