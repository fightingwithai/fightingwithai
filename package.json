{
  "name": "fightingwithai",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint:assets": "npx tsx scripts/lint-assets.ts",
    "prepare": "husky",
    "postinstall": "cd node_modules/bearing-dev && npm install && npm run build && cd ../.. && mkdir -p node_modules/@bearing-dev && ln -sf ../bearing-dev/packages/atlas node_modules/@bearing-dev/atlas && ln -sf ../bearing-dev/packages/compass node_modules/@bearing-dev/compass"
  },
  "lint-staged": {
    "*.{astro,mdx,md,html,jsx,tsx}": "npm run lint:assets"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "astro": "^5.0.0",
    "bearing-dev": "github:bearing-dev/bearing-dev#atlas-magic-links"
  },
  "devDependencies": {
    "glob": "^11.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsx": "^4.19.0",
    "vitest": "^4.0.15"
  }
}
